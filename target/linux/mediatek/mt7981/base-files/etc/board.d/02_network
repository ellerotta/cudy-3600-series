#!/bin/sh

. /lib/functions.sh
. /lib/mediatek.sh
. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

mediatek_setup_interfaces()
{
	local board="$1"

	case $board in
	*fpga*)
		ucidef_set_interfaces_lan_wan "eth0" "eth1"
		ucidef_add_switch "switch0" \
			"0:lan" "1:lan" "2:lan" "3:lan" "4:wan" "6u@eth0" "5u@eth1"
		;;
	*gsw*)
		ucidef_set_interfaces_lan_wan "eth0" "eth1"
		ucidef_add_switch "switch0" \
			"0:lan" "1:lan" "2:lan" "3:lan" "4:lan" "6u@eth0"
		;;
	*2500wan-p5*)
		ucidef_set_interfaces_lan_wan "lan1 lan2 lan3 lan4" wan
		;;
	R31)
		#ucidef_set_interfaces_lan_wan "eth0.1" "eth0.6"
		ucidef_set_interfaces_lan_wan "eth0" "eth1"
		ucidef_add_switch "switch0" \
			"1:lan" "2:lan" "3:lan"  "0:wan" "6@eth0" "5@eth1"		
		;;
	R53 | R59)
		ucidef_set_interfaces_lan_wan "eth0" "eth1"
		ucidef_add_switch "switch0" \
			"1:lan" "2:lan" "3:lan" "4:lan" "0:wan" "6@eth0" "5@eth1"
		;;
        R68)
                ucidef_set_interfaces_lan_wan "eth0" "eth1"
                ucidef_add_switch "switch0" \
	                        "0:lan" "1:lan" "2:lan" "3:lan" "4:wan" "6@eth0" "5@eth1"
                ;;		
	R63 | R57)
		ucidef_set_interfaces_lan_wan "eth0" "eth1"
		ucidef_add_switch "switch0" \
			"0:lan:4" "1:lan:3" "2:lan:2" "3:lan:1" "6@eth0"
		;;
	R50 | R58)
		ucidef_add_switch "switch0" \
			"1:lan:3" "2:lan:2" "3:lan:1" "0:wan" "6@eth0"
		;;
	R37 | R49)
		ucidef_set_interfaces_lan_wan "eth1" "eth0"

		;;
	R47)
		ucidef_set_interfaces_lan_wan "eth1" "eth0"

		;;
	R36)
		ucidef_set_interfaces_lan_wan "eth0"
		;;
	R51 | R81)
		ucidef_set_interfaces_lan_wan "eth0" "eth1"
		;;
	*)
		ucidef_set_interfaces_lan_wan "lan1 lan2 lan3 lan4" eth1
		;;
	esac
}

mediatek_setup_macs()
{
	local board="$1"
	#local part_name="bdinfo"
	local lan_mac=""
	local wan_mac=""
	#local lan_mac_offset=""
	#local wan_mac_offset=""

	case $board in
	*)
		#lan_mac_offset="0xDE00"
		#wan_mac_offset="0x24"
		;;
	esac

	#lan_mac=$(mtd_get_mac_binary $part_name $lan_mac_offset)
	#wan_mac=$(mtd_get_mac_binary $part_name $wan_mac_offset)
	lan_mac=$(macaddr_canonicalize $(bdinfo mac))
	wan_mac=$(macaddr_add $lan_mac 1)

	#case "$lan_mac" in
	#	00:00:00:00:00:00);;
	#	ff:ff:ff:ff:ff:ff);;
	#	*)
	#	[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "wan" "$lan_mac"
	#;;
	#esac

	case "$wan_mac" in
		00:00:00:00:00:00);;
		ff:ff:ff:ff:ff:ff);;
		*)
		[ -n "$wan_mac" ] && ucidef_set_interface_macaddr "wan" "$wan_mac"
	;;
	esac

}

board_config_update
board=$(mediatek_board_name)
mediatek_setup_interfaces $board
mediatek_setup_macs $board
board_config_flush

exit 0
